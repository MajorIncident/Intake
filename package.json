{
  "name": "intake",
  "private": true,
  "type": "module",
  "scripts": {
    "build:templates": "node scripts/build-templates-manifest.mjs",
    "build": "npm run build:templates",
    "dev": "npm run build:templates && npx live-server --port=4173 --open=index.html",
    "test": "bash -lc 'shopt -s globstar nullglob; mkdir -p test-results; node --test --loader ./tests/test-loader.mjs \"$@\" tests/**/*.test.mjs' _",
    "update:storage-docs": "node scripts/update-storage-docs.js",
    "check:storage-docs": "node scripts/update-storage-docs.js && git diff --quiet -- docs/storage-schema.md",
    "lint": "eslint",
    "verify:tests": "node scripts/ensure-tests-cover-changes.js",
    "verify:summary": "node scripts/ensure-summary-integrations.js",
    "verify:persistence": "node scripts/ensure-persistence-integrations.js"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-plugin-jsdoc": "^61.1.12",
    "jsdom": "^27.1.0"
  }
}
