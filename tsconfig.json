{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "server/src",
    "outDir": "dist/server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
    "sourceMap": true
  },
  "include": [
    "server/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
